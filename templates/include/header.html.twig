<header id="header" class="site-header bg-light py-2 py-sm-4" role="banner" aria-label="{{ 'Site header'|t }}">
	<div class="header position-relative">
		<div class="container">
			<div role="navigation" class="d-flex justify-content-between align-items-center">
				<div id="nav-head" class="col">
					{% if page.branding %}
						{{ page.branding }}
					{% endif %}
				</div>
								<div class="col col-md-9 d-lg-flex d-none flex-column align-items-center flex-lg-row justify-content-lg-end">
					{% if page.primary_menu %}
						{{ page.primary_menu }}
					{% endif %}

					{% if page.secondary_menu %}
						{{ page.secondary_menu }}
					{% endif %}
 
				</div>
				{% if page.primary_menu or page.secondary_menu %}
					{# Mobile menu #}
					<div class="d-lg-none">
						<button class="hamburger hamburg	er--squeeze d-flex align-items-center" type="button" aria-label="{{'Menu'|t}}" id="mobile-nav-button" data-bs-toggle="offcanvas" data-bs-target="#mobile-menu" aria-controls="mobile-menu">
							<span class="me-3 small d-none d-sm-block"></span>
							<span class="hamburger-box">
								<span class="hamburger-inner"></span>
							</span>
						</button>
					</div>
				{% endif %}

			</div>
		</div>
	</div>
</header>
